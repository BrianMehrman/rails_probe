<p id="notice"><%= notice %></p>

<p>
  <strong>Host:</strong>
  <%= @report.host %>
</p>

<p>
  <strong>Session:</strong>
  <%= @report.session %>
</p>

<p>
  <strong>User:</strong>
  <%= @report.user_id %>
</p>

<p>
  <strong>Action:</strong>
  <%= @report.action %>
</p>

<p class='report-text'>
  <%= File.open(@report.path, 'r').read %>
</p>

<p>
  <strong>Data:</strong>
  <%= @report.data %>
</p>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>

